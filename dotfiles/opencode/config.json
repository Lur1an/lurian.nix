{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "playwright": {
      "type": "local",
      "command": [
        "mcp-server-playwright",
        "--isolated",
        "--browser=firefox",
        "--headless"
      ]
    },
    "v0": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp.v0.dev",
        "--header",
        "Authorization: Bearer ${V0_API_KEY}"
      ]
    }
  }
}
